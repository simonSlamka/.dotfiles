conky.config ={
  -- CONKY SETTINGS
  background = true,
  update_interval = 1,
  total_run_times = 0,
  
  cpu_avg_samples = 2,
  net_avg_samples = 2,
  
  override_utf8_locale = true,
  
  double_buffer = true,
  no_buffers = true,
  
  text_buffer_size = 32768,
  
  -- CONKY: WINDOW SPECIFICATIONS
  own_window = true,
  own_window_argb_value = 192,
  own_window_argb_visual = true,
  own_window_class = 'conky-semi',
  own_window_colour = '#0b0d18',
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
  -- own_window_transparent = true,
  own_window_transparent = false,
  own_window_type = 'normal',
  -- own_window_type = 'desktop',

  border_inner_margin = 6,
  border_width = 5, 

  minimum_height = 1020,

  minimum_width = 280,
  maximum_width = 280,

  xinerama_head = 2,

  alignment = 'top_right',
  gap_x = 1,
  gap_y = 1,

  -- GRAPHICS SETTINGS
  draw_shades = false,
  draw_outline = true,
  draw_borders = false,
  draw_graph_borders = true,
  -- draw_graph_borders = false,

  -- TEXT SETTINGS
  use_xft = true,
  font = 'Montserrat Regular:size=10',
  xftalpha = 0.2,

  uppercase = false,

  -- Pad percentages to this many decimals (0 = no padding)
  pad_percents = 2,

  -- COLOUR SETTINGS
  default_color = 'AAAAAA',
  default_shade_color = '333333',
  -- default_outline_color = '111111',
  default_outline_color = '010101',
  color1 = '999999',
  color2 = 'CCCCCC',
  color3 = 'EEEEEE',
  color4 = '444444',
  color5 = '555555',
  color6 = '666666',
  color7 = '3b71a1',
  color8 = '00ffff',
};


conky.text = [[
${alignc}${color ffff00}${font Montserrat Bold:size=25}${time %H:%M:%S}${font}${color bbbb00}${alignc}
${voffset -9}
${alignc}${font Montserrat Light:size=12}${time %A %d %B %Y}${font}${alignc}
${color6}${hr 2}${color}
${voffset -6}
${font Montserrat Light:size=8}${color1}SYSTEM:${color}${font} ${alignr}$sysname ${color8}$nodename 
${font Montserrat Light:size=8}${color1}UPTIME:${color}${font} ${alignr}$uptime_short
${font Montserrat Light:size=8}${color1}KERNEL:${color}${font} ${alignr}$kernel ${voffset 5}
${font :size=11}${color}CPU ${color}${hr 2}${color}
${voffset -15}
${font Montserrat Light:size=10}${color1}CPU:${color}${font} ${alignr}${color}AMD Ryzen 9 5950X${color}${font}${voffset 2}
# Overall CPU utilization bar
${font Montserrat Light:size=9}${color1}Util:${color}${font} ${alignr}
${cpubar 6,250}${goto 300}${cpu}%${color}${voffset 2}
# Current CPU time
${font Montserrat Light:size=9}${color1}Time:${color}${font} ${alignr}${execi 60 cat /proc/stat | grep '^cpu ' | awk '{print $2, $3, $4, $5, $6, $7, $8}' | awk '{print ($1+$2+$3+$4+$5+$6+$7)/100}' | awk '{printf "%.2f", $1}'} s${color}${voffset 2}
${font Montserrat Light:size=9}${color1}CPU temp:${color}${font} ${font :size=10}${alignr}${hwmon 1 temp 1}°${color4}C${color}${voffset 5}
${font :size=11}${color}Network ${color}${hr 2}${color}
${voffset -15}
${font Montserrat Light:size=10}${color1}IPaddr:${color}${font} ${alignr}${addr wlxc025e91be3ab} / ${addr wg0}
${if_match "${addr wlxc025e91be3ab}"!="No Address"}${voffset 5}${font Montserrat Light:size=10}${font}Download ${alignr}${downspeedf wlxc025e91be3ab}k/s (${totaldown wlxc025e91be3ab})
${color3}${downspeedgraph wlxc025e91be3ab 50,280 ADFF2F 32CD32 -t}
${font Montserrat Light:size=10}${font}Upload ${alignr}${upspeedf wlxc025e91be3ab}k/s (${totalup wlxc025e91be3ab})
${color3}${upspeedgraph wlxc025e91be3ab 50,280 FF0000 8B0000 -t}
${endif}${voffset 5}${font :size=11}${color}Non-volatile memory ${color}${hr 2}${color}
${color1}Used: ${color3}${fs_used /}${color1}${goto 200}Free:${goto 250}${color3}${fs_free /}
${color2}${fs_bar /}
${font Montserrat Light:size=8}${color1}DISK I/O:${color}${font} ${alignr}$diskio
${voffset 2}${font Montserrat Light:size=8}${color1}READ: ${color}${font} ${goto 80}${color4}${diskiograph_read  15,210 ADFF2F 32CD32 750}${color}
${voffset 2}${font Montserrat Light:size=8}${color1}WRITE:${color}${font} ${goto 80}${color4}${diskiograph_write 15,210 FF0000 8B0000 750}${color}
$font${color 00ffff}root $alignc ${fs_used /} / ${fs_size /} $alignr ${color 188f18}${fs_used_perc /}%
${color 00ffff}${fs_bar /}${voffset 1}
$font${color DimGray}DATA $alignc ${fs_used /media/simtoon/DATA} / ${fs_size /media/simtoon/DATA} $alignr ${color 188f18}${fs_used_perc /media/simtoon/DATA}%
${color 188f18}${fs_bar /media/simtoon/DATA}${voffset 1}
$font${color DimGray}/mnt $alignc ${fs_used /mnt} / ${fs_size /mnt} $alignr ${color 188f18}${fs_used_perc /mnt}%
${color 188f18}${fs_bar /mnt}${voffset 1}
${font :size=11}${color}Memory ${color}${hr 2}${color}${voffset 2}
$font${color DimGray}RAM $alignc $mem / $memmax $alignr ${color 188f18}$memperc%
${color 188f18}$membar${voffset 1}
${font :size=11}${color}VGA controller ${color}${hr 2}${color}${voffset 2}
${font Montserrat Light:size=9}${color1}Util:${color}${font}
${execibar 2 ./gpu_utilization.sh}${color}
${font Montserrat Light:size=9}${color1}GPU freq: $alignr ${color}${font}${nvidia gpufreq} Mhz${voffset 3}
${font Montserrat Light:size=9}${color1}Mem freq: $alignr ${color}${font}${nvidia memfreq} Mhz${voffset 3}
${font Montserrat Light:size=9}${color1}Temp: $alignr ${color}${font}${nvidia temp}°C ${voffset 3}
${voffset 3}${font :size=11}${color}Proc ${color}${hr 2}${color}
${voffset -15}
${font :size=10}${font Montserrat Light:size=8}${color1}TOTAL:${color}${font} ${alignr}${processes}
${voffset -10} 
${font Montserrat Light:size=9}${color1}Proc human-readable: ${goto 160}sysmem: ${goto 245}CPU: ${color}${font}
${voffset -16}
${font Montserrat Light:size=9}${color1}${top_mem name 1} ${color}${font} ${goto 160}${top mem 1} % ${goto 235}${top cpu 1} %
${font Montserrat Light:size=9}${color1}${top_mem name 2} ${color}${font} ${goto 160}${top mem 2} % ${goto 235}${top cpu 2} %
${font Montserrat Light:size=9}${color1}${top_mem name 3} ${color}${font} ${goto 160}${top mem 3} % ${goto 235}${top cpu 3} %
${font Montserrat Light:size=9}${color1}${top_mem name 4} ${color}${font} ${goto 160}${top mem 4} % ${goto 235}${top cpu 4} %
${font Montserrat Light:size=9}${color1}${top_mem name 5} ${color}${font} ${goto 160}${top mem 5} % ${goto 235}${top cpu 5} %
${font Montserrat Light:size=10}${color ff00ff}${alignr}Property of Simtoonia${color}${font}


]];
